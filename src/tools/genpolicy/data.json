{
    "shared_files": {
        "source_path": "^/run/kata-containers/shared/containers/$(bundle-id)-[a-z0-9]{16}-"
    },
    "pause_container": {
        "root": {
            "path": "/run/kata-containers/shared/containers/$(bundle-id)",
            "readonly": true
        },
        "mounts": [
            {
                "destination": "/dev/shm",
                "type": "bind",
                "source": "/run/kata-containers/sandbox/shm",
                "options": [
                    "rbind"
                ]
            },
            {
                "destination": "/etc/resolv.conf",
                "type": "bind",
                "options": [
                    "rbind",
                    "ro",
                    "nosuid",
                    "nodev",
                    "noexec"
                ]
            }
        ]
    },
    "other_container": {
        "root": {
            "path": "/run/kata-containers/shared/containers/$(bundle-id)"
        },
        "mounts": [
            {
                "destination": "/etc/hosts",
                "type": "bind",
                "options": [
                    "rbind",
                    "rprivate",
                    "rw"
                ]
            },
            {
                "destination": "/dev/termination-log",
                "type": "bind",
                "options": [
                    "rbind",
                    "rprivate",
                    "rw"
                ]
            },
            {
                "destination": "/etc/hostname",
                "type": "bind",
                "options": [
                    "rbind",
                    "rprivate"
                ]
            },
            {
                "destination": "/etc/resolv.conf",
                "type": "bind",
                "options": [
                    "rbind",
                    "rprivate"
                ]
            },
            {
                "destination": "/dev/shm",
                "type": "bind",
                "source": "/run/kata-containers/sandbox/shm",
                "options": [
                    "rbind"
                ]
            },
            {
                "destination": "/var/run/secrets/kubernetes.io/serviceaccount",
                "type": "bind",
                "options": [
                    "rbind",
                    "rprivate",
                    "ro"
                ]
            }
        ]
    },
    "volumes": {
        "emptyDir": {
            "mount_type": "local",
            "mount_source": "^/run/kata-containers/shared/containers/$(sandbox-id)/local/",
            "mount_point": "^/run/kata-containers/shared/containers/$(sandbox-id)/local/",
            "driver": "local",
            "source": "local",
            "fstype": "local",
            "options": [
                "mode=0777"
            ]
        },
        "configMap": {
            "mount_type": "bind",
            "mount_source": "^/run/kata-containers/shared/containers/$(bundle-id)-[a-z0-9]{16}-",
            "mount_point": "^/run/kata-containers/shared/containers/watchable/$(bundle-id)-[a-z0-9]{16}-",
            "driver": "watchable-bind",
            "fstype": "bind",
            "options": [
                "rbind",
                "rprivate",
                "ro"
            ]
        },
        "confidential_configMap": {
            "mount_type": "bind",
            "mount_source": "^/run/kata-containers/shared/containers/$(bundle-id)-[a-z0-9]{16}-",
            "mount_point": "^/run/kata-containers/shared/containers/$(bundle-id)-[a-z0-9]{16}-",
            "driver": "local",
            "fstype": "bind",
            "options": [
                "rbind",
                "rprivate",
                "ro"
            ]
        }
    },
    "kata_config": {
        "confidential_guest": true
    },
    "rules_settings": {
        "ATTENTION 1": [
            "Setting the value of AllowRequestsFailingPolicy to true",
            "allows all requests to be executed - even those requests",
            "that are causing a policy failure! This is an insecure",
            "configuration but can be useful for allowing insecure pods",
            "to start, then connect to them and inspect Policy logs for",
            "the root cause of a failure."
        ],
        "AllowRequestsFailingPolicy": false,


        "ATTENTION 2": [
            "Guest files matching the path regular expressions below",
            "can be copied by the Host."
        ],
        "CopyFileRequest": [
            "^/run/kata-containers/shared/containers/"
        ],


        "ATTENTION 3": [
            "This field can be used to allow the Host to execute some",
            "commands on the Guest. For example, adding:",

            "/bin/sh",

            "to this array will allow the following command to be",
            "executed successfully:",

            "kubectl exec pod_name -- /bin/sh"
        ],
        "ExecProcessRequest": [],


        "CreateSandboxRequest": true,
        "DestroySandboxRequest": true,
        "GetOOMEventRequest": true,
        "GuestDetailsRequest": true,
        "OnlineCPUMemRequest": true,
        "ReadStreamRequest": false,
        "RemoveContainerRequest": true,
        "RemoveStaleVirtiofsShareMountsRequest": true,
        "SignalProcessRequest": true,
        "StartContainerRequest": true,
        "StatsContainerRequest": true,
        "TtyWinResizeRequest": true,
        "UpdateEphemeralMountsRequest": true,
        "UpdateInterfaceRequest": true,
        "UpdateRoutesRequest": true,
        "WriteStreamRequest": false,
        "WaitProcessRequest": true
    }
}
